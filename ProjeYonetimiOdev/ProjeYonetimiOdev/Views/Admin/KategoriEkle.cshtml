
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="card card-dark" style="margin:8px;">
    <div class="card-header bg-cyan">
        <h3 class="card-title">Kategori Ekle</h3>
    </div>
    <form class="form-horizontal" method="post" action="/Admin/KategoriEkle" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Kategori Adı :</label>
                <div class="col-sm-10">
                    <input type="text" autocomplete="off" class="form-control" name="Adi"  placeholder="Kategori Adı">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Açıklama : </label>
                <div class="col-sm-10">
                    <input type="text" autocomplete="off" class="form-control" name="Aciklama"  placeholder="Açıklama">
                </div>
            </div>
            
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn bg-cyan">Kaydet</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>
