
@{
    ViewBag.Title = "Marka Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="card card-dark" style="margin:5px;">
    <div class="card-header bg-cyan">
        <h3 class="card-title">Marka Ekle</h3>
    </div>
    <form class="form-horizontal" method="post" action="/Admin/MarkaEkle" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Marka Adı :</label>
                <div class="col-sm-10">
                    <input type="text" autocomplete="off" class="form-control" name="Adi" id="inputEmail3" placeholder="Marka Adı">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Açıklama : </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autocomplete="off" name="Aciklama" id="inputPassword3" placeholder="Açıklama">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Marka Resmi : </label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" id="" name="fileUpload"><br><br>
                        </div>
                        
                    </div>
                </div>
            </div>
            
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn bg-cyan">Kaydet</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>