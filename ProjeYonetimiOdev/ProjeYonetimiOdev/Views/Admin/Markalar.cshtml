
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ProjeYonetimiOdev.Models.Markalar>

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body style="margin:8px;">

    <a href="/Admin/MarkaEkle"><button type="button" class="btn bg-cyan" style="margin:5px 5px 5px 0px;">MARKA EKLE</button> </a>
    <table class="table table-hover" style="text-align:center;">
        <thead class="table bg-cyan" >
            <tr>
                <th>Marka Adı</th>
                <th>Açıklama</th>
                <th>Resmi Göster</th>
                <th>Sil</th>
                <th>Güncelle</th>
                

            </tr>
        </thead>
        <tbody >
            @foreach (var marka in Model)
            {
            <tr>
                <td>@marka.Adi</td>
                <td>@marka.Aciklama</td>
                <td>
                    <a href="@marka.Resim.OrtaYol" style="color:black;" target="_blank"><i class="fas fa-eye"></i></a>

                </td>
                <td>
                    <a href="#" style="color:red;"><i class="fas fa-trash-alt"></i></a>
                </td>
                <td>

                    <a href="#" style="color:#17a2b8;"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
            }


        </tbody>
    </table>
</body>
</html>



