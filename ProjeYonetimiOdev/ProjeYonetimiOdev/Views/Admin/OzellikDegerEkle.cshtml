
@{
    ViewBag.Title = "Özellik Değer Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ProjeYonetimiOdev.Models.Ozellikler>

<div class="card card-dark" style="margin:5px;">
    <div class="card-header bg-cyan">
        <h3 class="card-title">Özellik Değeri Ekle</h3>
    </div>
    <form class="form-horizontal" method="post" action="/Admin/OzellikDegerEkle">
        <div class="card-body">
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label">Özellik Tipi : </label>
                <div class="col-sm-10">
                    <div class="input-group">
                        
                            <select class="form-control" name="OzellikID">
                                <option>Özellik tipi seçin</option>
                                @foreach (var tip in Model)
                                {
                                    <option value="@tip.ID">@tip.Adi</option>
                                }
                            </select>
                    </div>
                </div>
            </div>
            

            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Özellik Değer Adı :</label>
                <div class="col-sm-10">
                    <input type="text" autocomplete="off" class="form-control" name="Adi" id="inputEmail3" placeholder="Kategori Adı">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Açıklama : </label>
                <div class="col-sm-10">
                    <input type="text" autocomplete="off" class="form-control" name="Aciklama" id="inputPassword3" placeholder="Açıklama">
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn bg-cyan">Kaydet</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>




