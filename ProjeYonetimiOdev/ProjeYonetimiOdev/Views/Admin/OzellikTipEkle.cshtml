
@{
    ViewBag.Title = "Özellik Tip Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ProjeYonetimiOdev.Models.Kategoriler>
<div class="card card-dark" style="margin:5px;">
    <div class="card-header bg-cyan">
        <h3 class="card-title">Özellik Ekle</h3>
    </div>
    <form class="form-horizontal" method="post" action="/Admin/OzellikTipEkle" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Özellik Adı :</label>
                <div class="col-sm-10">
                    <input type="text" autocomplete="off" class="form-control" name="Adi" id="inputEmail3" placeholder="Kategori Adı">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Açıklama : </label>
                <div class="col-sm-10">
                    <input type="text" autocomplete="off" class="form-control" name="Aciklama" id="inputPassword3" placeholder="Açıklama">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Kategori Adı : </label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <select class="form-control" name="KategoriID" >
                            <option>Kategori seçiniz</option>
                            @foreach (var ktg in Model)
                            {
                                <option value="@ktg.ID">@ktg.Adi</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn bg-cyan">Kaydet</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>


