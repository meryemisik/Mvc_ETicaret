@model IEnumerable<ProjeYonetimiOdev.Models.OzellikDetay>
<div class="form-group">
    <label>Özellik Değer :</label>
    <div>
        <select class="form-control" name="OzellikDetayID" id="ozellik">

            <option>Özellik değer seçiniz</option>
            @foreach (var deger in Model)
            {
                <option value="@deger.ID">@deger.Adi</option>
            }
        </select>
    </div>
</div>
