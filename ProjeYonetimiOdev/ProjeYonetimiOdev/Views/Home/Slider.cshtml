@model IEnumerable<ProjeYonetimiOdev.Models.Resim>
<div class="hero-section section mb-30">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="hero-slider hero-slider-one">
                    @foreach (var item in Model)
                    {
                        <div class="hero-item">
                            <div class="row align-items-center justify-content-between">
                                <div class="hero-content col-6">
                                    <h1><span >Kaçırılmayacak<br /> Fırsat<br /> Ürünler</span></h1>
                                    <a href="#">get it now</a>

                                </div>
                                <div class="hero-image col-6">
                                    <img src="@item.BuyukYol" alt="Hero Image">
                                </div>

                            </div>
                        </div>
                    }

                </div><!-- Hero Slider End -->

            </div>
        </div>
    </div>
</div>
